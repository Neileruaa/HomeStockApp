{% extends 'base.html.twig' %}

{% block title %}Resultat{% endblock %}

{% block body %}
    <h1>Résultat</h1>
    <form action="{{ path('app_home_findbarcode') }}" method="post">
        <input type="number" id="codebar" name="codebar" placeholder="Votre code bar" value="{{ codebar }}">
        <input type="submit" value="Chercher" class="btn btn-success">
    </form>
    <div class="accordion mb-4 mt-4" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Résultat
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    {% if nameProduct %} {{ nameProduct }} {% endif %}
                    {% if pathImage %} <img src="{{ pathImage }}" alt="">{% endif %}
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Formulaire d'ajout
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('app_product_scanner') }}" class="btn btn-danger">Scanner à nouveau </a>
    <a href="{{ path('app_home_index') }}" class="btn btn-success">Valider</a>
{% endblock %}
