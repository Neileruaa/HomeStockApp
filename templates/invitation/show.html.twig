{% extends 'base.html.twig' %}

{% block title %}
Invitation
{% endblock %}

{% block body %}
	<h1>Liste de vos invitations</h1>
	{% for invitation in invitations %}
		<div class="alert alert-success" role="alert">
			<div class="row">
				<div class="col-10">
					{{ invitation.author.realUserName }} vous invite Ã  rejoindre sa famille: {{ invitation.author.famille.name }} !
				</div>
				<div class="col-2 text-center">
					<a href="{{ path('app_invitation_accept', {'id': invitation.id}) }}" class="btn btn-success"><i class="fas fa-check-circle"></i></a>
					<a href="{{ path('app_invitation_decline', {'id': invitation.id}) }}" class="btn btn-danger"><i class="fas fa-times-circle"></i></a>
				</div>
			</div>
		</div>
	{% else %}
		<h3>Vous n'avez pas d'invitation</h3>
	{% endfor %}
{% endblock %}

